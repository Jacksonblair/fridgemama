include header

div(class="ui grid")
	div(class="row")
		div(class="three wide column")
		div(class="ten wide column" id="maincolumn")
			h2(class="ui left aligned header")
				| Your results:

			div
				each val in results
					div(class="ui left aligned segment resultsegment")
						h2(class="recipename")= val.name
						h4(class="recipedescription") val.description
						include gallery
						div(class="ui segment")
							div(class="ui stackable grid")
								div(class="six wide left aligned column resultcontentleft")
									div(class="ui grid")
										div(class="row")
											div(class="eight wide floated column")
												h3(class="ui header contentsheader") Ingredients:
											div(class="eight wide right aligned column")
												h3(class="ui header") Serves: 1 
													button(class="ui mini button amount") + 
													button(class="ui mini button amount") - 
											div(class="row")
												div(class="sixteen wide floated column")
													div(class="ui bulleted list")
														each ingredient in val.ingredients
															div(class="item")
																div(class="ingredientquantity") ingredient.quantity
																div(class="ingredientunit") ingredient.unit
																div(class="ingredientname") ingredient.name
																

								div(class="ten wide left aligned column resultcontentright")
									h3(class="ui header contentsheader") Method:
									div(class="ui list")
										div(class="item") 
											strong Step 1:
											div(class="ui list")
												div(class="item") Do stuff
										div(class="item") 
											strong Step 2:
											div(class="ui list")
												div(class="item") Do more stuff
										div(class="item") 
											strong Step 3:
											div(class="ui list")
												div(class="item") Continue to do stuff
										div(class="item") 
											strong Step 4:
											div(class="ui list")
												div(class="item") Eat the stuff
						include comments
				else
					p There are no values

include footer