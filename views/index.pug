include header

h1= title
p Welcome to #{title}

div(class="ui search")
	div(class="ui icon input")
		input(class="prompt" type="text" placeholder="Search ingredients...")
		i(class="search icon")
	div(class="results")

script.
	window.onload = function() {

		var content = [
		  { name: 'Beef' },
		  { name: 'Bread' },
		  { name: 'Lettuce' },
		  { name: 'Eggs' }
		];

		$('.ui.search')
		.search({
	        type: 'standard',
			source: content,
		    searchFields: [
		      'name'
		    ]
		});
	}



include footer